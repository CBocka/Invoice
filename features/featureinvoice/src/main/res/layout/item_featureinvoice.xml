<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/imagenfondo_recyclerview_invoice">>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivIcono"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/invoice_factura" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNombreFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/horizon"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Nombre Factura" />

    <TextView
        android:id="@+id/tvFechaEmision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/horizon"
        app:layout_constraintStart_toEndOf="@+id/tvTextoFechaEmision"
        app:layout_constraintTop_toBottomOf="@+id/tvTextoNombreCliente"
        tools:text="DD/MM/AAAA" />

    <TextView
        android:id="@+id/tvFechaVencimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/horizon"
        app:layout_constraintStart_toEndOf="@+id/tvTextoFechaVencimiento"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaEmision"
        tools:text="DD/MM/AAAA" />

    <TextView
        android:id="@+id/tvTextoFechaVencimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Fecha de Vencimiento:"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/horizon"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/tvTextoFechaEmision" />

    <TextView
        android:id="@+id/tvTextoFechaEmision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Fecha de EmisiÃ³n:"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/horizon"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/tvTextoNombreCliente" />

    <TextView
        android:id="@+id/tvTextoNombreCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Nombre Cliente:"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/horizon"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreFactura" />

    <TextView
        android:id="@+id/tvNombreCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="NOMBRECLIENTE"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/horizon"
        app:layout_constraintStart_toEndOf="@+id/tvTextoNombreCliente"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreFactura" />

</androidx.constraintlayout.widget.ConstraintLayout>